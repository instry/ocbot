// Force pin ocbot extension to toolbar

--- a/chrome/browser/ui/toolbar/toolbar_actions_model.cc
+++ b/chrome/browser/ui/toolbar/toolbar_actions_model.cc
@@ -40,6 +40,7 @@
 #include "extensions/common/manifest_constants.h"
 #include "extensions/common/permissions/permissions_data.h"
 
+#include "chrome/browser/ocbot/ocbot_constants.h"
 #if !BUILDFLAG(IS_ANDROID)
 #include "chrome/browser/ui/web_applications/app_browser_controller.h"
 #endif
@@ -384,6 +385,11 @@
 
 bool ToolbarActionsModel::IsActionForcePinned(const ActionId& action_id) const {
+  // ocbot: Force pin ocbot extensions to toolbar
+  if (ocbot::IsOcbotExtension(action_id)) {
+    return true;
+  }
+  
   auto* management =
       extensions::ExtensionManagementFactory::GetForBrowserContext(profile_);
   return management->GetForcePinnedList().contains(action_id);
 }
